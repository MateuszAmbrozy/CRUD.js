<%- include('layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %> "
                            role="alert">
                            <button
                                class="btn-close" type="button"
                                data-bs-dismiss="alert"
                                aria-label="Close"> 
                            </button>
                            <strong><%= message.message %> </strong>
                </div>
            <%} %>
            <div class="table-responsive">
                <% if(cocktails!='') { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Instruction</th>
                                <th>Ingredients</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% cocktails.forEach(function(cocktail, index) { %> <!-- Pętla iterująca po koktajlach -->
                            <tr>
                                <td><%= index + 1%></td>
                                <td><%= cocktail.name %></td>
                                <td><%= cocktail.category %></td>
                                <td><%= cocktail.instruction %></td>
                                <td>
                                    <a href="/cocktails/<%= cocktail._id %>/ingredients" class="text-success">
                                        <i class="fa-solid fa-mug-saucer mx-1"></i>
                                    </a>
                                </td>
                                <td>
                                    <a href="/cocktails/<%= cocktail._id %>/edit" class="text-success">
                                        <i class="fas fa-edit fa-lg mx-1"></i>
                                    </a>

                                    <a href="/cocktails/<%= cocktail._id %>/delete" class="text-danger" onclick="return confirm('Are you sure you want to delete this cocktail and its ingredients?');">
                                        <i class="fas fa-trash fa-lg mx-1"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <%} else { %>
                    <h1> class="text-center text-secondary t-5"> No cocktails fount </h1>
                <% } %>


            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
