<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <h5 class="text-light">Edit Ingredient</h5>
                        </div>
                        <div class="card-body p-4">
                            <!-- Formularz edycji skÅ‚adnika -->
                            <form action="/update/ingredient/<%= ingredient._id %>" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="cocktailId" value="<%= cocktailId %>" />
                                <input type="hidden" name="ingredientId" value="<%= ingredient._id %>" />
                            
                                <div class="mb-3">
                                    <label for="name">Name</label>
                                    <input type="text" name="name" class="form-control form-control-lg" value="<%= ingredient.name %>" required />
                                </div>
                            
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <textarea name="description" class="form-control form-control-lg" required><%= ingredient.description %></textarea>
                                </div>
                            
                                <div class="mb-3">
                                    <label for="isAlcohol">Is Alcohol?</label>
                                    <select name="isAlcohol" class="form-control form-control-lg">
                                        <option value="true" <%= ingredient.isAlcohol ? 'selected' : '' %>>Yes</option>
                                        <option value="false" <%= !ingredient.isAlcohol ? 'selected' : '' %>>No</option>
                                    </select>
                                </div>
                            
                                <div class="mb-3">
                                    <label for="quantity">Quantity</label>
                                    <!-- Use the quantity value passed from the route -->
                                    <input type="number" name="quantity" class="form-control form-control-lg" value="<%= quantity %>" required />
                                </div>
                            
                                <div class="mb-3">
                                    <label for="image">Current Image</label>
                                    <% if (ingredient.image) { %>
                                        <img src="/uploads/<%= ingredient.image %>" alt="<%= ingredient.name %>" style="width: 100px; height: 100px;">
                                    <% } else { %>
                                        <p>No image available</p>
                                    <% } %>
                                </div>
                            
                                <div class="mb-3">
                                    <label for="image">Update Image</label>
                                    <input type="file" name="image" class="form-control form-control-lg" />
                                </div>
                            
                                <div class="mb-3 mt-4">
                                    <input type="submit" name="submit" value="Save Changes" class="btn btn-primary btn-lg" />
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
